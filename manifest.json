{
    "name": "topbar",
    "version": "0.3.0",
    "manifest_version": 2,
    "description": "Display the top bar with the specified URI",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "browser_action": {
        "default_title": "topbar",
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "permissions": [
        "storage"
    ]
}